<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.controller.oyy0v0.mapper.DrugCategoryMapper">
    
    <resultMap type="DrugCategory" id="DrugCategoryResult">
        <result property="id"    column="id"    />
        <result property="drugName"    column="drug_name"    />
        <result property="parentId"    column="parent_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectDrugCategoryVo">
        select id, drug_name, parent_id, create_time, update_time, create_by, update_by, remark from jk_drug_category
    </sql>

    <select id="selectDrugCategoryList" parameterType="DrugCategory" resultMap="DrugCategoryResult">
        <include refid="selectDrugCategoryVo"/>
        <where>  
            <if test="drugName != null  and drugName != ''"> and drug_name like concat('%', #{drugName}, '%')</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
        </where>
    </select>
    
    <select id="selectDrugCategoryById" parameterType="Long" resultMap="DrugCategoryResult">
        <include refid="selectDrugCategoryVo"/>
        where id = #{id}
    </select>

    <insert id="insertDrugCategory" parameterType="DrugCategory">
        insert into jk_drug_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="drugName != null">drug_name,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="drugName != null">#{drugName},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateDrugCategory" parameterType="DrugCategory">
        update jk_drug_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="drugName != null">drug_name = #{drugName},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDrugCategoryById" parameterType="Long">
        delete from jk_drug_category where id = #{id}
    </delete>

    <delete id="deleteDrugCategoryByIds" parameterType="String">
        delete from jk_drug_category where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>